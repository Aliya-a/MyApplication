<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    >

    <!--第一行图片-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:orientation="vertical"
        android:layout_weight="0.2"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_horizontal"
            android:text="@string/row1"
            android:textColor="#F7F4F3"
            android:textSize="18sp"
            android:orientation="vertical"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_horizontal"
            android:text="@string/row2"
            android:textColor="#F7F4F3"
            android:textSize="13sp"
            android:layout_gravity="bottom"
            />

        <!--
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/u"/>-->

    </LinearLayout>

    <!--第二行输入框-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:padding="20dp"
        >
        <!--账号栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="vertical"
            >



            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/account"
                android:hint="请输入您的账号"
                android:drawableLeft="@drawable/zhanghao"
                android:textColorHint="#EFE4E4"
                android:drawablePadding="10dp"/>

        </LinearLayout>

        <!--密码栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:orientation="vertical"

            >


            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/password"
                android:drawableLeft="@drawable/mima"
                android:drawablePadding="10dp"
                android:hint="请输入密码"
                android:textColorHint="#ffff"
                android:inputType="textPassword"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <!--按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33"
            android:orientation="vertical"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#E6AAAA"
                android:text="登录"
                android:textColor="#F5F1F1"
                android:textSize="20sp"
                />



            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#DAE4DA"
                android:layout_gravity="center"
                android:text="注册"
                android:textColor="#0E0E0E"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码"
                android:textColor="#CD3232"
                android:textSize="16sp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

    </LinearLayout>

    <!--第三行提示信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:gravity="center_horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有账号？"
            android:textSize="16sp"
            android:textColor="#777"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="16sp"
            android:textColor="#CD5959"/>

    </LinearLayout>

</LinearLayout>
